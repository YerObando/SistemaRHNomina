        <dt>
            @Html.DisplayNameFor(model => model.Horarios.nombre)  @* Etiqueta para el nombre del horario asociado *@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Horarios.nombre)  @* Valor del nombre del horario *@
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id_puesto })  @* Enlace para editar el puesto actual *@ |
    @Html.ActionLink("Back to List", "Index")  @* Enlace para volver al listado de puestos *@
</p>
