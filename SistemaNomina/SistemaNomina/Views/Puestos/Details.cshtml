    <dl class="dl-horizontal">
        @* Lista etiquetas y valores *@

        <dt>
            @Html.DisplayNameFor(model => model.nombre_puesto)  @* Etiqueta para el campo 'nombre_puesto' *@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre_puesto)  @* Valor del campo 'nombre_puesto' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.salario_base)  @* Etiqueta para el campo 'salario_base' *@
