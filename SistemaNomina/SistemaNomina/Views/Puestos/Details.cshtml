        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descripcion)  @* Etiqueta para el campo 'descripcion' *@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.descripcion)  @* Valor del campo 'descripcion' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.horas_jornada)  @* Etiqueta para el campo 'horas_jornada' *@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.horas_jornada)  @* Valor del campo 'horas_jornada' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.es_jefe)  @* Etiqueta para el campo 'es_jefe' (indica si es jefe) *@
        </dt>
        <dd>
            @Html.DisplayFor(model => model.es_jefe)  @* Valor del campo 'es_jefe' *@
        </dd>

        <dt>
