@model SistemaNomina.Puestos 

@{
    ViewBag.Title = "Details"; @* Título que se mostrará en la pestaña del navegador *@
    Layout = "~/Views/Shared/_Layout.cshtml"; @*  vista *@
}

<h2>Details</h2>  @* Título  *@

