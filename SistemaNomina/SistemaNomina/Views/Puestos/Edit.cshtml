@model SistemaNomina.Puestos  

@{
    ViewBag.Title = "Edit"; @* Título  *@
    Layout = "~/Views/Shared/_Layout.cshtml"; @*  vista *@
}

<h2>Edit</h2>  @* Título  página *@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() @* Seguridad *@

    <div class="form-horizontal">
     
        <h4>Puestos</h4>  @* Subtítulo formulario *@
        <hr /> 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })  @* Muestra errores generales del formulario *@
        @Html.HiddenFor(model => model.id_puesto)  @* Campo oculto para enviar el id del puesto *@

        <div class="form-group">
            @* Grupo para el campo nombre_puesto *@
            @Html.LabelFor(model => model.nombre_puesto, htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para nombre_puesto *@
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre_puesto, new { htmlAttributes = new { @class = "form-control" } })  @* Campo de texto para editar nombre_puesto *@
                @Html.ValidationMessageFor(model => model.nombre_puesto, "", new { @class = "text-danger" })  @* Mensajes de error específicos para este campo *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para seleccionar departamento *@
            @Html.LabelFor(model => model.id_departamento, "id_departamento", htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para id_departamento *@
            <div class="col-md-10">
                @Html.DropDownList("id_departamento", null, htmlAttributes: new { @class = "form-control" })  @* Lista desplegable para seleccionar departamento *@
                @Html.ValidationMessageFor(model => model.id_departamento, "", new { @class = "text-danger" })  @* Mensajes de error para departamento *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para salario_base *@
            @Html.LabelFor(model => model.salario_base, htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para salario_base *@
            <div class="col-md-10">
                @Html.EditorFor(model => model.salario_base, new { htmlAttributes = new { @class = "form-control" } })  @* Campo para editar salario_base *@
                @Html.ValidationMessageFor(model => model.salario_base, "", new { @class = "text-danger" })  @* Mensajes de error para salario_base *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para descripcion *@
            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para descripcion *@
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })  @* Campo para editar descripcion *@
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })  @* Mensajes de error para descripcion *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para horas_jornada *@
            @Html.LabelFor(model => model.horas_jornada, htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para horas_jornada *@
            <div class="col-md-10">
                @Html.EditorFor(model => model.horas_jornada, new { htmlAttributes = new { @class = "form-control" } })  @* Campo para editar horas_jornada *@
                @Html.ValidationMessageFor(model => model.horas_jornada, "", new { @class = "text-danger" })  @* Mensajes de error para horas_jornada *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para campo es_jefe  *@
            @Html.LabelFor(model => model.es_jefe, htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para es_jefe *@
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.es_jefe)  @*  indicar si es jefe *@
                    @Html.ValidationMessageFor(model => model.es_jefe, "", new { @class = "text-danger" })  @* Mensajes de error para es_jefe *@
                </div>
            </div>
        </div>

        <div class="form-group">
            @* Grupo para seleccionar horario *@
            @Html.LabelFor(model => model.id_horario, "id_horario", htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para id_horario *@
            <div class="col-md-10">
                @Html.DropDownList("id_horario", null, htmlAttributes: new { @class = "form-control" })  @* Lista desplegable para seleccionar horario *@
                @Html.ValidationMessageFor(model => model.id_horario, "", new { @class = "text-danger" })  @* Mensajes de error para id_horario *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para fecha_creacion *@
            @Html.LabelFor(model => model.fecha_creacion, htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para fecha_creacion *@
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control" } })  @* Campo para editar fecha_creacion *@
                @Html.ValidationMessageFor(model => model.fecha_creacion, "", new { @class = "text-danger" })  @* Mensajes de error para fecha_creacion *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para fecha_actualizacion *@
            @Html.LabelFor(model => model.fecha_actualizacion, htmlAttributes: new { @class = "control-label col-md-2" })  @* Etiqueta para fecha_actualizacion *@
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_actualizacion, new { htmlAttributes = new { @class = "form-control" } })  @* Campo para editar fecha_actualizacion *@
                @Html.ValidationMessageFor(model => model.fecha_actualizacion, "", new { @class = "text-danger" })  @* Mensajes de error para fecha_actualizacion *@
            </div>
        </div>

        <div class="form-group">
            @* Grupo para el botón guardar *@
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />  @* Botón para enviar el formulario *@
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")  @* Enlace para regresar a la lista de puestos *@
</div>

@section Scripts {  @*  cargar scripts necesarios *@
@Scripts.Render("~/bundles/jqueryval")  @* Validación *@
}
