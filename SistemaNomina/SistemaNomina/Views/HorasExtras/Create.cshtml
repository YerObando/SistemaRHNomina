                @Html.DropDownList("aprobado_por", null, htmlAttributes: new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.aprobado_por, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.fecha_aprobacion, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_aprobacion, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.fecha_aprobacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Grupo para fecha de creación del registro*@
            @Html.LabelFor(model => model.fecha_creacion, htmlAttributes: new { @class = "control-label col-md-2" })
            @*Etiqueta para fecha de creación*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control" } })
                @*Campo para ingresar fecha de creación del registro*@
                @Html.ValidationMessageFor(model => model.fecha_creacion, "", new { @class = "text-danger" })
            </div>
        </div>

