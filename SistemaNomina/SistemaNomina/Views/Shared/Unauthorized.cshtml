@{
    ViewBag.Title = "Acceso no autorizado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-shield-lock"></i> Acceso no autorizado
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-octagon" style="font-size: 4rem; color: #dc3545;"></i>
                    </div>
                    <h4 class="text-danger mb-3">No tienes permisos para acceder a esta sección</h4>
                    <p class="lead">
                        Tu cuenta no tiene los privilegios necesarios para ver este contenido.
                    </p>
                    <p>
                        Si crees que esto es un error, por favor contacta al administrador del sistema.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Volver al inicio
                        </a>
                        <a href="@Url.Action("Logout", "Usuarios")" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>