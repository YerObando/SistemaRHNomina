@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de que este sea el layout usado en las demás vistas
}

<div class="container mt-5">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">¡Ha ocurrido un error!</h4>
        <p>@ViewBag.Error</p>
        <hr>
        <p class="mb-0">Por favor, inténtelo de nuevo más tarde o contacte al administrador del sistema.</p>
    </div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Volver al inicio</a>
</div>
