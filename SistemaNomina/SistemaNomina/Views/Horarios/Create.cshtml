@model SistemaNomina.Horarios

@{
    ViewBag.Title = "Create";
    // Establece el título de la página como "Create"
    Layout = "~/Views/Shared/_Layout.cshtml";
    // plantilla
}

<h2>Create</h2>
@*Título  nuevo registro*@

@using (Html.BeginForm())
// Inicia un formulario
{
    @Html.AntiForgeryToken()
    // seguridad

    <div class="form-horizontal">
        @*Formulario*@

        <h4>Horarios</h4>
        @* Subtítulo del formulario*@

        <hr />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*resumen de los errores de validación, si los hay, en color rojo*@

        <div class="form-group">
            @*Grupo de formulario para el campo 'nombre'*@
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            @*Etiqueta con estilo para el campo 'nombre'*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @*Campo editable para ingresar el nombre*@
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                @* Mensaje de validación específico para el campo 'nombre'*@
            </div>
        </div>

        <div class="form-group">
            @*Grupo para el campo 'hora_entrada'*@
            @Html.LabelFor(model => model.hora_entrada, htmlAttributes: new { @class = "control-label col-md-2" })
            @*Etiqueta para la hora de entrada*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.hora_entrada, new { htmlAttributes = new { @class = "form-control" } })
                @*Campo editable para la hora de entrada*@
                @Html.ValidationMessageFor(model => model.hora_entrada, "", new { @class = "text-danger" })
                @* Mensaje de error para la hora de entrada*@
            </div>
        </div>

        <div class="form-group">
            '
            @Html.LabelFor(model => model.hora_salida, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.hora_salida, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.hora_salida, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.fecha_creacion, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_creacion, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.fecha_creacion, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.fecha_actualizacion, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_actualizacion, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.fecha_actualizacion, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @*Grupo para el botón de envío del formulario*@
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @*Botón para enviar el formulario y crear el nuevo registro*@
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
    @*Enlace para regresar a la lista principal de horarios*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*validación*@
}
