@model SistemaNomina.Permisos

@{
    ViewBag.Title = "Delete"; @* Título de la página *@
    Layout = "~/Views/Shared/_Layout.cshtml"; @* Vista *@
}

<h2>Delete</h2>  @* Encabezado principal *@

<h3>Are you sure you want to delete this?</h3>  @* Confirmación para eliminar *@

<div>
    <h4>Permisos</h4>  @* Subtítulo *@
    <hr />  
    <dl class="dl-horizontal">
        @* Lista campos *@
        <dt>
            @Html.DisplayNameFor(model => model.fecha)  @* Nombre del campo 'fecha' *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)  @* Valor del campo 'fecha' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.horas)  @* Nombre del campo 'horas' *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horas)  @* Valor del campo 'horas' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.motivo)  @* Nombre del campo 'motivo' *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.motivo)  @* Valor del campo 'motivo' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha_creacion)  @* Nombre del campo 'fecha_creacion' *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_creacion)  @* Valor del campo 'fecha_creacion' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha_actualizacion)  @* Nombre del campo 'fecha_actualizacion' *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_actualizacion)  @* Valor del campo 'fecha_actualizacion' *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Empleados.cedula)  @* Nombre de la cédula del empleado *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empleados.cedula)  @* Valor de la cédula del empleado *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estados.nombre)  @* Nombre del estado del permiso *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estados.nombre)  @* Valor del estado *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuarios.usuario)  @* Nombre del usuario asociado *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuarios.usuario)  @* Valor del usuario *@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TiposPermiso.nombre)  @* Nombre del tipo de permiso *@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TiposPermiso.nombre)  @* Valor del tipo de permiso *@
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() @* seguridad *@

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |  @* Botón para confirmar eliminación *@
            @Html.ActionLink("Back to List", "Index")  @* Enlace para regresar a la lista sin eliminar *@
        </div>
    }
</div>
