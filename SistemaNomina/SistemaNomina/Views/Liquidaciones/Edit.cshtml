@model SistemaNomina.Liquidaciones

@{
    ViewBag.Title = "Edit"; // Título de la vista
    Layout = "~/Views/Shared/_Layout.cshtml"; // Plantilla de diseño
}

<h2>Edit</h2>

@using (Html.BeginForm()) // Inicia formulario
{
    @Html.AntiForgeryToken() // Seguridad

    <div class="form-horizontal">
        <!-- estilo formulario -->
        <h4>Liquidaciones</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) // Muestra errores generales de validación
        @Html.HiddenFor(model => model.id_liquidacion) // Campo oculto con el ID de la liquidación

        <!-- Selección del empleado -->
        <div class="form-group">
            @Html.LabelFor(model => model.id_empleado, "id_empleado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_empleado", null, htmlAttributes: new { @class = "form-control" }) // Lista desplegable
                @Html.ValidationMessageFor(model => model.id_empleado, "", new { @class = "text-danger" }) // Muestra errores
            </div>
        </div>

        <!-- Selección del tipo de liquidación -->
        <div class="form-group">
            @Html.LabelFor(model => model.id_tipo, "id_tipo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_tipo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_tipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Fecha de salida del empleado -->
        <div class="form-group">
            @Html.LabelFor(model => model.fecha_salida, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha_salida, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha_salida, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Monto por preaviso -->
        <div class="form-group">
            @Html.LabelFor(model => model.preaviso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.preaviso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.preaviso, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Monto por cesantía -->
        <div class="form-group">
            @Html.LabelFor(model => model.cesantia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cesantia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cesantia, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Monto por vacaciones pendientes -->
        <div class="form-group">
            @Html.LabelFor(model => model.vacaciones_pendientes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vacaciones_pendientes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vacaciones_pendientes, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Cantidad de días pendientes de vacaciones -->
        <div class="form-group">
            @Html.LabelFor(model => model.dias_vacaciones_pendientes, htmlAttributes: new { @class = "control-label col-md-2" })
