                @Html.ValidationMessageFor(model => model.dias_vacaciones_pendientes, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Aguinaldo proporcional -->
        <div class="form-group">
            @Html.LabelFor(model => model.aguinaldo_proporcional, htmlAttributes: new { @class = "control-label col-md-2" })
