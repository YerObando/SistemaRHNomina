@model SistemaNomina.Empleados

@{
    ViewBag.Title = "Detalle de Vacaciones";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Detalle de Vacaciones</h4>
        </div>
        <div class="card-body">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            else if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-warning">
                    @ViewBag.Mensaje
                </div>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-4">Nombre del Empleado:</dt>
                    <dd class="col-sm-8">@ViewBag.NombreEmpleado</dd>

                    <dt class="col-sm-4">Fecha de Ingreso:</dt>
                    <dd class="col-sm-8">@ViewBag.FechaIngreso</dd>

                    <dt class="col-sm-4">Periodo de Vacaciones:</dt>
                    <dd class="col-sm-8">@ViewBag.Periodo</dd>

                    <dt class="col-sm-4">Días Acumulados por Ley:</dt>
                    <dd class="col-sm-8">@ViewBag.DiasAcumuladosPorLey</dd>

                    <dt class="col-sm-4">Saldo Actual Disponible:</dt>
                    <dd class="col-sm-8 text-success fw-bold">@ViewBag.SaldoActual días</dd>
                </dl>
            }

            <a href="@Url.Action("Index", "Empleados")" class="btn btn-secondary mt-4">
                <i class="bi bi-arrow-left-circle"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>
