@model SistemaNomina.Roles

@{
    ViewBag.Title = "Crear Rol"; // Título de la página
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usa el layout general del sitio
}

<h2>Crear nuevo Rol</h2>

@using (Html.BeginForm()) // Inicia el formulario que enviará los datos al controlador Roles/Create (POST)
{
    @Html.AntiForgeryToken() <!-- Protección contra ataques CSRF -->

    <div class="form-horizontal">
        <h4>Datos del Rol</h4>
        <hr />
        <!-- Validación global que muestra errores si hay -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Campo para ingresar el nombre del rol -->
        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Campo para ingresar la descripción del rol -->
        <div class="form-group">
            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- No mostramos campos de fecha_creacion ni fecha_actualizacion porque se manejan automáticamente en backend -->
        <!-- Botón para enviar el formulario -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<!-- Link para volver a la lista de roles -->
<div>
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    <!-- Scripts necesarios para la validación cliente -->
    @Scripts.Render("~/bundles/jqueryval")
}
