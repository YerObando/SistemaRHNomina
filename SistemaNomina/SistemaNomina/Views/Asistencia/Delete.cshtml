@model SistemaNomina.Asistencia

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

@* Mensaje para confirmar la acción de eliminar el registro *@
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Asistencia</h4>
    <hr />
    @* Lista detallada con los datos del registro de asistencia que se va a eliminar *@
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hora_entrada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.hora_entrada)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hora_salida)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.hora_salida)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.es_feriado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.es_feriado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha_registro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha_registro)
        </dd>

        @* Mostrar la cédula del empleado asociado a esta asistencia *@
        <dt>
            @Html.DisplayNameFor(model => model.Empleados.cedula)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Empleados.cedula)
        </dd>

        @* Mostrar el nombre del feriado asociado, si existe *@
        <dt>
            @Html.DisplayNameFor(model => model.Feriados.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Feriados.nombre)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @* Botón para confirmar eliminación y enlace para regresar a la lista *@
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
